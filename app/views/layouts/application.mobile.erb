<!DOCTYPE html>
<html>
<head>
  <title>Moneyball</title>
  <%= stylesheet_link_tag "/jqtouch/jqtouch.css", "/jqtouch/themes/apple/theme.css" %>
  <%= csrf_meta_tag %>
</head>
<body>
  <div class="current">
    <div class="toolbar">
      <%= link_to "Back", nil, :class => "back" unless current_page? root_path %>
      <h1><%= yield :title %></h1>
      <%= link_to "Full site", root_url(:mobile => 0), :class => "button", :rel => "external" %>
      <%= yield :toolbar %>
    </div>
  <%- if notice -%>
    <div class="info">
      <%= notice %>
    </div>
  <%- end -%>

  <%= yield %>
  </div>

  <%= javascript_include_tag "/jqtouch/jquery-1.4.2.min.js", "/jqtouch/jqtouch.js", "mobile" %>
</body>
</html>
